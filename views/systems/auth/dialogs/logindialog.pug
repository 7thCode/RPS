.modal-content
    .modal-header
        span.h5.modal-title #{messages.title}
        span.pull-right
            button.btn.btn-box-tool(type='button',ng-click='cancel()')
                i.fa.fa-times
    .modal-body
        ng-form(name="validate", ng-submit="answer(items)")
            .row
                .col-xs-10.col-xs-offset-1
                    .form-group
                        label.h6(for="username") #{messages.mail_field}
                        span(ng-messages="validate.username.$error")
                            //span.error-message(ng-message="required") #{messages.required}
                            span.error-message(ng-message="maxlength") #{messages.long}
                        input.form-control.no-zoom#username(ng-model="items.username", data-ng-required="true",type='text', name="username", placeholder='xxxxxxx@xxx.co.jp', required, ng-maxlength="255")

                .col-xs-10.col-xs-offset-1
                    .form-group
                        label.h6(for="password") #{messages.password_field}
                        span(ng-messages="validate.password.$error")
                            //span.error-message(ng-message="required") #{messages.required}
                            span.error-message(ng-message="minlength") #{messages.short}
                            span.error-message(ng-message="maxlength") #{messages.long}
                        input.form-control.no-zoom#password(ng-model="items.password", type='password', name="password", placeholder='*******', required, ng-minlength="4", ng-maxlength="255", data-ng-required="true")

            .row
                .col-xs-12
                    .progress(ng-show="progress")
                       .progress-bar.progress-bar-striped.active(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
            .row
                .col-xs-12
                    include ../../../systems/common/error_message
    .modal-footer
        .row
            .col-xs-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-primary(type="button" ,ng-click='answer(items);validate.$dirty = false;', style="margin:0.5rem;", ng-disabled="progress || validate.$invalid", aria-label="") #{messages.ok}
                    if (config.facebook)
                        button.btn.btn-primary(type="button" ,ng-click="go('/auth/facebook');", style="margin:0.5rem;background-color:#3B5998;", aria-label="")
                            i.fa.fa-facebook
                    if (config.twitter)
                        button.btn.btn-primary(type="button" ,ng-click="go('/auth/twitter');", style="margin:0.5rem;background-color:#55acee;", aria-label="")
                            i.fa.fa-twitter-square
                    if (config.instagram)
                        button.btn.btn-primary(type="button" ,ng-click="go('/auth/instagram');", style="margin:0.5rem;background-color:#3f729b;", aria-label="")
                            i.fa.fa-instagram
                    if (config.googleplus)
                        button.btn.btn-primary(type="button" ,ng-click="go('/auth/googleplus');", style="margin:0.5rem;background-color:#d34836;", aria-label="")
                            i.fa.fa-google-plus